<section class="w-full grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8">
    <% if (theme.index_recommends && theme.index_recommends.length > 0) { %>
        <% theme.index_recommends.forEach(function (filePath) { %>
            <% let post = site.posts.findOne({slug: filePath}); %>
            <a href="<%= url_for(post.path) %>" title="<%= post.title %> Cheatsheet">
                <div class="card <%= post.background %>">
                    <%- icon(post.slug) %>
                    <p><%= post.title %></p>
                </div>
            </a>
        <% }); %>
    <% } %>
</section>